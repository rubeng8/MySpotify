<!DOCTYPE html>
<html lang="es">
<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Reproductor de M√∫sica</title>
 <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
</head>

{% block body %}

<body>

    <header>
        <a href="{{ path('app_inicio') }}">

            <img src="{{ asset('img/logo1.png') }}" alt="Logo" id="logo">

        </a>

        <div id="input">

            <input type="text" placeholder="¬øQu√© quieres reproducir?" id="inputBuscar">
            <button id="idBuscar" onclick="buscarCancion()">Buscar</button>

        </div>

        <a href="{{ path('app_login') }}">
            <img src="{{ asset('img/login1.png') }}" alt="Login" id="login">
        </a>

    </header>
    
    <div id="container">
        <nav>
            <h3>|| Tu biblioteca</h3>

            <div id="biblioteca">

                <p><a href="{{ path('app_cancion') }}">üéµ Canciones</a></p>
                <p><a href="{{ path('app_playlist') }}">üé∂ Playlist</a></p>
                <p><a href="{{ path('app_playlistCrear') }}">+ Crear playlist</a></p>
                {% if is_granted('ROLE_ADMIN') %}
                     <p><a href="{{ path('admin') }}">‚öôÔ∏è Dashboard</a></p>
                {% endif %}
                {% if is_granted('ROLE_MANAGER') %}
                     <p><a href="{{ path('estadisticas') }}">Estad√≠sticas</a></p>
                {% endif %}
                {% if app.user %}
                    <p><a href="{{ path('app_logout') }}">Cerrar sesi√≥n</a></p>
                {% endif %}

            </div>
        </nav>

        <div id="centro">

            <h2>Tus playlists</h2>
            <div class="contenedor-canciones">
                {%for playlist in playlists %}
                    <div class="cancion" onclick="mostrarCancionesPlaylist('{{playlist.id}}')">
                            <img src="{{ asset('img/nota.png') }}" alt="portada">
                            <h3>{{ playlist.nombre }}</h3>
                    </div>
                {% else %}
                    <p>No existen playlists</p>
                {% endfor %}
            </div>

            {% if app.user %}
                <h2>Tus Playlists</h2>
                <div class="contenedor-canciones">
                    {% for playlist in usuarioPlaylist %}
                        <div class="cancion" onclick="mostrarCancionesPlaylist('{{ playlist.id }}')">
                            <img src="{{ asset('img/nota.png') }}" alt="portada">
                            <h3>{{ playlist.nombre }}</h3>
                        </div>
                    {% else %}
                        <p>No existen playlists</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <footer>
    
    <p>¬© 2025 MySpotify - Todos los derechos reservados.</p>

    </footer>

    <script src="{{ asset('assets/js/script.js') }}"></script>
    <!-- se escribe asi, no hace falta usar public en documentos estaticos. Symfony lo gestiona automaticamente -->

</body>
{% endblock %}
</html>

