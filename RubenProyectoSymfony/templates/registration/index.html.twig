{% extends 'base.html.twig' %}

{% block body %}
<div class="register-container">
    <div class="register-card">
        <h1 class="register-title">Registro</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
            {{ form_widget(registrationForm, {'attr': {'class': 'register-input'}}) }}
            <button class="submit-btn">Registrar</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
